{
  "manifest_version": 3,
  "name": "AI Studio Code Uploader",
  "version": "1.0.0",
  "description": "Automatically renames code files to .txt on upload for Google AI Studio. Supports a wide range of programming languages.",
  "permissions": ["scripting", "storage", "notifications", "action"],
  "host_permissions": ["https://aistudio.google.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "MacCtrl+Shift+U"
      },
      "description": "Enable or disable the extension"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["vendor/browser-polyfill.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-studio-code-uploader@example.com",
      "strict_min_version": "109.0"
    }
  }
}
